<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        >

        <FrameLayout
            android:id="@+id/menu_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <ImageView
                        android:id="@+id/img_menu_one"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/ic_index_focus"
                        />

                    <TextView
                        android:id="@+id/tv_menu_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/index"
                        android:textColor="@color/colorAccent"
                        android:textSize="12.5sp" />

                </LinearLayout >


            </FrameLayout >
        </FrameLayout >

        <FrameLayout
            android:id="@+id/menu_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <ImageView
                        android:id="@+id/img_menu_two"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/ic_setting"
                        />

                    <TextView
                        android:id="@+id/tv_menu_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.5dp"
                        android:text="@string/settings"
                        android:textSize="12.5sp" />

                </LinearLayout >


            </FrameLayout >

        </FrameLayout >

        <FrameLayout
            android:id="@+id/menu_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                >

                <ImageView
                    android:id="@+id/img_menu_three"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    />

                <TextView
                    android:id="@+id/tv_menu_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.5dp"
                    android:textSize="12.5sp" />

            </LinearLayout >

            <TextView
                android:id="@+id/image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="22px"
                android:layout_marginTop="-1px"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12px"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </FrameLayout >

        <FrameLayout
            android:id="@+id/menu_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <!--icon_new_main_mine_normal-->

                <ImageView
                    android:id="@+id/img_menu_four"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    />

                <TextView
                    android:id="@+id/tv_menu_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.5dp"
                    android:textSize="12.5sp" />

            </LinearLayout >
        </FrameLayout >
    </LinearLayout >

</merge >